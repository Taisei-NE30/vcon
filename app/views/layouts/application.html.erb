<!DOCTYPE html>
<html>
  <head>
    <title>Vcon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= if logged_in? %>
        <%= link_to 'logout', '/signout' %>
      <%= else %>
        <%= link_to 'Twitter Login', 'auth/twitter' %>
      <%= end %>
    </header>

    <%= if flash[:notice] %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
    <%= end %>

    <%= yield %>
  </body>
</html>
